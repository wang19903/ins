{
  "compilerOptions": {
    //"baseUrl": "./src", //起始路徑
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowSyntheticDefaultImports": true, //如果還沒導出，充許引入其他模組 套件..
    //"module": "ES2015" //使用ES6 import export管理方式
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "allowJs": true,
    "noImplicitAny": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.js", //"src/store/index.js","src/main.js"改成src/**/*.js
    "env.d.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
